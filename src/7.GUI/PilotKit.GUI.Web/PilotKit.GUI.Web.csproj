    <ProjectReference Include="..\..\6.Orchestration\PilotKit.Orchestration.Interfaces\PilotKit.Orchestration.Interfaces.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Autofac" Version="4.0.0-rc2-240" />
    <PackageReference Include="Autofac.Configuration" Version="4.0.0-rc2-286" />
    <PackageReference Include="Autofac.Extensions.DependencyInjection" Version="4.0.0-rc2-240" />
    <PackageReference Include="Microsoft.ApplicationInsights.AspNetCore" Version="1.0.0-rc2-final" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.Cookies" Version="1.0.2" />
    <PackageReference Include="Microsoft.AspNetCore.Diagnostics" Version="1.0.2" />
    <PackageReference Include="Microsoft.AspNetCore.Diagnostics.EntityFrameworkCore" Version="1.0.2" />
    <PackageReference Include="Microsoft.AspNetCore.Http" Version="1.0.2" />
    <PackageReference Include="Microsoft.AspNetCore.Http.Extensions" Version="1.0.2" />
